<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddNoteActivity">

    <EditText
        android:id="@+id/nuevoTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Título"
        android:inputType="textCapWords"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@android:color/transparent"/>

    <EditText
        android:id="@+id/nuevaDescripcion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:gravity="top"
        android:hint="Escribe tu nota aquí..."
        android:inputType="textMultiLine|textCapSentences"
        android:textSize="16sp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_error"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="Debes añadir un título"
        tools:visibility="visible" />

    <Button
        android:id="@+id/guardarNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Guardar Nota" />

</LinearLayout>